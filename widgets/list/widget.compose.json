{
    "name": {
        "en": "List",
        "nl": "Lijst"
    },
    "height": 120,
    "devices": {
        "type": "app",
        "singular": true,
        "filter": {}
    },
    "settings": [
        {
            "id": "dynamicHeight",
            "type": "checkbox",
            "label": {
                "en": "Dynamic height",
                "nl": "Dynamische hoogte"
            },
            "value": true
        },
        {
            "id": "fixedHeight",
            "type": "number",
            "label": {
                "en": "Fixed height",
                "nl": "Vaste hoogte"
            },
            "value": 400,
            "min": 120
        }
    ],
    "api": {
        "addItem": {
            "method": "POST",
            "path": "/:deviceId/items"
        },
        "get": {
            "method": "GET",
            "path": "/:deviceId"
        },
        "getCategories": {
            "method": "GET",
            "path": "/:deviceId/categories"
        },
        "getItem": {
            "method": "GET",
            "path": "/:deviceId/items/:id"
        },
        "getItems": {
            "method": "GET",
            "path": "/:deviceId/items"
        },
        "getPersons": {
            "method": "GET",
            "path": "/:deviceId/persons"
        },
        "editItem": {
            "method": "POST",
            "path": "/:deviceId/items/:id"
        },
        "markChecked": {
            "method": "POST",
            "path": "/:deviceId/items/:id/checked"
        },
        "markUnchecked": {
            "method": "POST",
            "path": "/:deviceId/items/:id/unchecked"
        },
        "removeItem": {
            "method": "DELETE",
            "path": "/:deviceId/items/:id"
        },
        "updateQuantity": {
            "method": "POST",
            "path": "/:deviceId/items/:id/quantity"
        }
    }
}
