{
    "name": {
        "en": "List",
        "nl": "Lijst"
    },
    "height": 120,
    "devices": {
        "type": "app",
        "singular": true,
        "filter": {}
    },
    "settings": [
        {
            "id": "filterPerson",
            "type": "text",
            "label": {
                "en": "Person (leave empty for all)",
                "nl": "Persoon (leeg voor iedereen)"
            },
            "value": ""
        },
        {
            "id": "filterDate",
            "type": "dropdown",
            "label": {
                "en": "Due date",
                "nl": "Vervaldatum"
            },
            "value": "all",
            "values": [
                {
                    "id": "all",
                    "label": {
                        "en": "All",
                        "nl": "Alles"
                    }
                },
                {
                    "id": "today",
                    "label": {
                        "en": "Today",
                        "nl": "Vandaag"
                    }
                },
                {
                    "id": "future",
                    "label": {
                        "en": "Future",
                        "nl": "Toekomst"
                    }
                }
            ]
        }
    ],
    "api": {
        "addItem": {
            "method": "POST",
            "path": "/:deviceId/items"
        },
        "get": {
            "method": "GET",
            "path": "/:deviceId"
        },
        "getCategories": {
            "method": "GET",
            "path": "/:deviceId/categories"
        },
        "getItem": {
            "method": "GET",
            "path": "/:deviceId/items/:id"
        },
        "getItems": {
            "method": "GET",
            "path": "/:deviceId/items"
        },
        "getPersons": {
            "method": "GET",
            "path": "/:deviceId/persons"
        },
        "editItem": {
            "method": "POST",
            "path": "/:deviceId/items/:id"
        },
        "markChecked": {
            "method": "POST",
            "path": "/:deviceId/items/:id/checked"
        },
        "markUnchecked": {
            "method": "POST",
            "path": "/:deviceId/items/:id/unchecked"
        },
        "removeItem": {
            "method": "DELETE",
            "path": "/:deviceId/items/:id"
        },
        "updateQuantity": {
            "method": "POST",
            "path": "/:deviceId/items/:id/quantity"
        }
    }
}
